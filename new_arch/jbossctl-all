
MYNAME="$0";
MYARGS="$*";

main()
{
	cmd="$1";
	kind="$2";

	case "$cmd" in
	setup ) setup ;;
	clean ) clean ;;
	start | stop | adduser | addconfig | wait )
		cmd $cmd $kind ;;
	esac
}

setup()
{
	for envdir in output/*;
	do
		./jbossctl setup $envdir;
	done
}

clean()
{
	for envdir in output/*;
	do
		./jbossctl clean $envdir;
	done
}

cmd()
{
	cmd="$1";
	kind="$2";

	for envdir in output/*;
	do
		./jbossctl $cmd $envdir;
	done
}

main $*;

