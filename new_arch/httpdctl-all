
MYNAME="$0";
MYARGS="$*";

. ./common.env

main()
{
	cmd="$1";
	kind="$2";

	case "$cmd" in
	setup ) setup ;;
	clean ) clean ;;
	start | stop | enable | disable | status ) cmd $cmd $kind ;;
	esac
}

setup()
{
	for envdir in $OUTPUT_DIR/*;
	do
		./httpdctl setup $envdir;
	done
}

clean()
{
	for envdir in $OUTPUT_DIR/*;
	do
		./httpdctl clean $envdir;
	done
}

cmd()
{
	cmd="$1";
	kind="$2";

	for envdir in $OUTPUT_DIR/*;
	do
		./httpdctl $cmd $envdir;
	done
}

main $*;

