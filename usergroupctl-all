
MYNAME="$0";
MYARGS="$*";

. ./common.env

main()
{
	action="$1";

	mkdir -p $HOME_BASE_DIR;

	case "$action" in
	setup ) add_all ;;
	clean ) del_all ;;
	check )
		echo "##### check GROUP"
		tail -15 /etc/group;
		echo "##### check USER"
		tail -15 /etc/passwd;
		;;
	esac
}

add_all()
{
	for instdir in $INSTANCE_DIR/*;
	do
		echo $instdir
		./usergroupctl addgroup $instdir
		./usergroupctl adduser $instdir
	done
}

del_all()
{
	for instdir in $INSTANCE_DIR/*;
	do
		echo $instdir
		./usergroupctl deluser $instdir
		./usergroupctl delgroup $instdir
	done
}

main $*;

