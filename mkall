
MYNAME="$0";
MYARGS="$*";

. ./common.env

. ./common.h

set -eu

usage()
{
cat <<EOF
usage : $MYNAME command

command :
	all
		setup, start, config, deploy

	setup
	clean

	start
	stop

	config

	deploy

	package
EOF
}

main()
{
	if [ "$#" -eq 0 ]; then
		usage;
		exit 1;
	fi

	cmd="$1";

	case "$cmd" in
	package | archive )
		$cmd
		exit 0
		;;
	esac

	check_env;

	case "$cmd" in
	all ) all ;;
	setup ) setup ;;
	clean ) clean ;;
	start ) start ;;
	stop ) stop ;;
	config ) config ;;
	deploy ) deploy ;;
	* )
		usage;
		exit 1
		;;
	esac
}

all()
{
	setup;
	start;
	config;
	deploy;
}

archive()
{
	cp mod_jk/tomcat-connectors-1.2.42.tar $ARCHIVE_DIR;
	cp test/testap/app.war $ARCHIVE_DIR;
	( cd $ARCHIVE_DIR; tar xf tomcat-connectors-1.2.42.tar )
}

deploy()
{
	./jbossctl-all deploy
}

setup()
{
	./usergroupctl-all setup
	./httpdctl-all setup
	./jbossctl-all setup
	./sysctl-all setup httpd
	./sysctl-all setup jboss
	./sysctl-all enable httpd
	./sysctl-all enable jboss
}

start()
{
	./sysctl-all start jboss
	./sysctl-all start httpd
}

stop()
{
	./sysctl-all stop httpd
	./sysctl-all stop jboss
}

config()
{
	./jbossctl-all wait
	./jbossctl-all adduser
	./jbossctl-all addconfig
}

clean()
{
	./sysctl-all disable httpd
	./sysctl-all disable jboss
	./sysctl-all clean httpd
	./sysctl-all clean jboss
	./httpdctl-all clean
	./jbossctl-all clean
	./usergroupctl-all clean
}

cmd()
{
	cmd="$1";
	kind="$2";

	for envdir in $OUTPUT_DIR/*;
	do
		echo "message : $cmd $envdir";
	done
}

check_env()
{
	check_install_httpd;
	check_archive_files;
	check_output_dir;
	check_java;
	check_enforce;
	check_run_user "root";
}

check_output_dir()
{
	if [ ! -d "$OUTPUT_DIR" ]
	then
		echo "ERROR: OUTPUT_DIR(=$OUTPUT_DIR) environment is invalid !";
		echo "       check common.env file or OUTPUT_DIR env value.";
		exit 1;
	fi
}

check_run_user()
{
	runid="$1";
	if [ "`id -un`" != $runid ];
	then
		echo "ERROR: please run this script using \"$runid\" account !"
		exit 1;
	fi
}

check_install_httpd()
{
	bin="/usr/sbin/httpd";

	if [ ! -x "$bin" ];
	then
		echo "ERROR: check \"$bin\" executable file !"
		echo "       install $bin file by \"yum install httpd\" command."
		exit 1;
	fi
}

check_archive_files()
{
	for f in \
		jboss-eap-7.0.0.zip \
		postgresql-9.4.1212.jre7.jar \
		tomcat-connectors-1.2.42 \
		app.war
	do
		if [ ! -s "$ARCHIVE_DIR/$f" ]
		then
			echo "ERROR: check $ARCHIVE_DIR/$f file."
			exit 1;
		fi
	done
}

package()
{
	PWD="`pwd`";
	dstr=`date +%Y-%m%d-%H%M-%S`;
	revdir="$PWD/../rev/";
	dirname=`basename $PWD`;
	(
		cd ..;
		if [ ! -d "$revdir" ]; then mkdir $revdir; fi;
		arcfile="$revdir/$dirname-`hostname -s`-$dstr.tar";
		echo "creating archive in $arcfile";
		mkdir work@@dir
		cp -r $dirname work@@dir
		cd work@@dir
		rm -rf $dirname/.git
		tar cf $arcfile ./$dirname;
		cd ..;
		rm -rf work@@dir;
	)
}

main $*;

