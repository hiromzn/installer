
MYNAME="$0";
MYARGS="$*";

. ./common.env
. ./utility.h

main()
{
	cmd="$1";

	case "$cmd" in
	setup ) setup ;;
	clean ) clean ;;
	start | stop | enable | disable | status ) cmd $cmd ;;
	esac
}

setup()
{
	for envdir in $REPO_DIR/*;
	do
		./httpdctl setup $envdir;
	done
}

clean()
{
	for envdir in $REPO_DIR/*;
	do
		./httpdctl clean $envdir;
	done
}

cmd()
{
	cmd="$1";

	for envdir in $REPO_DIR/*;
	do
		./httpdctl $cmd $envdir;
	done
}

main $*;

